APP_ENV=prod
APP_SECRET=your_app_secret_here

# Database
DATABASE_URL="mysql://chat_user:chat_password@church-chat-mysql:3306/chat_db?serverVersion=8.0&charset=utf8mb4"

# RabbitMQ
MESSENGER_TRANSPORT_DSN="amqp://guest:guest@church-rabbitmq:5672/church"
RABBITMQ_HOST=church-rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=church

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-5-nano
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=30

# Service URLs
CONTENT_SERVICE_URL=http://church-content-service:8101
SIGNAL_SERVICE_URL=http://church-signal-service:8104

# Queue Configuration
QUEUE_PARALLEL_WORKERS=3
QUEUE_BATCH_SIZE=10
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=60

# Feature Flags
ENABLE_SIGNAL_INTEGRATION=false
ENABLE_TEST_MODE=true

# Xdebug Configuration (Development)
CONFIGURE_XDEBUG=0
XDEBUG_MODE=off
XDEBUG_CONFIG=idekey=PHPSTORM_CHURCH_CHAT